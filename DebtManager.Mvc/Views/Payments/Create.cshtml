@model DebtManager.Mvc.Models.PaymentVM

<h2>Create payment</h2>

@using (Html.BeginForm("Create", "Payments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            <label>You have paid to/for</label>
            @Html.DropDownListFor(m => m.ReceiverId, Model.Users, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Amount</label>
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Reason</label>
            @Html.TextBoxFor(m => m.Reason, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success pull-right btn-lg" value="Create" />
        </div>
    </fieldset>
}